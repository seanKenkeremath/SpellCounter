<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/sc_primary_color</item>
        <item name="colorPrimaryDark">?attr/sc_primary_dark_color</item>
        <item name="colorAccent">?attr/sc_accent_color</item>
    </style>

    <style name="AppTheme.Light">
        <item name="sc_primary_color">@color/light_grey</item>
        <item name="sc_primary_dark_color">@color/dark_grey</item>
        <item name="sc_accent_color">@color/light_grey</item>
        <item name="sc_option_button_color_normal">@color/dark_grey</item>
        <item name="sc_option_button_color_selected">@color/selected_yellow</item>
        <item name="sc_option_button_color_disabled">@color/optionButtonColorDisabled</item>
    </style>

    <style name="OptionButton">
        <item name="android:background">@drawable/option_button_bg</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="PlayerContainer">
        <item name="android:background">@drawable/player_container_bg</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- TODO -->
    </style>

    <style name="ValueEditText">
        <item name="android:ems">3</item>
        <item name="android:hint">0</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NameEditText">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
    </style>
</resources>
