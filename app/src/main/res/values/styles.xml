<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/darker_grey</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorButtonNormal">@color/dark_grey</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
    </style>

    <style name="AppTheme.Light">
        <item name="sc_primary_color">@color/light_grey</item>
        <item name="sc_primary_dark_color">@color/dark_grey</item>
        <item name="sc_accent_color">@color/light_grey</item>
        <item name="sc_option_button_color_normal">@color/dark_grey</item>
        <item name="sc_option_button_color_selected">@color/selected_yellow</item>
        <item name="sc_option_button_color_disabled">@color/optionButtonColorDisabled</item>
    </style>

    <style name="OptionButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/option_button_bg_color</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GameButton">
        <item name="tint">@color/game_button_color</item>
    </style>

    <style name="StartGameButton" parent="Header3">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerContainer"/>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- TODO -->
    </style>

    <style name="ValueEditText">
        <item name="android:ems">3</item>
        <item name="android:hint">0</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="NameEditText">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="UrlEditText" parent="NameEditText">
        <item name="android:inputType">textUri</item>
    </style>
</resources>
