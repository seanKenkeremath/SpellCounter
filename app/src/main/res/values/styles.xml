<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/darker_grey</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorButtonNormal">@color/dark_grey</item>
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:statusBarColor">@color/light_grey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="OptionButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/option_button_bg_color</item>
        <item name="android:textColor">@color/option_button_text_color</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="OptionButton.Number">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">1</item>
    </style>


    <style name="ColorPicker">
        <item name="highlightColor">@color/primary_text</item>
        <item name="highlightStrokeWidth">4dp</item>
    </style>

    <style name="GameButton">
        <item name="tint">@color/game_button_color</item>
    </style>

    <style name="StartGameButton">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/start_game_button_height</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:foreground">@drawable/start_button_ripple</item>
        <item name="android:background">@drawable/start_button_bg</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="StartGameButton.Round">
        <item name="android:background">@drawable/start_button_bg_round</item>
    </style>

    <style name="PlayerContainer" />

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- TODO -->
    </style>

    <style name="ValueEditText">
        <item name="android:ems">4</item>
        <item name="android:hint">0</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NameEditText">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="UrlEditText" parent="NameEditText">
        <item name="android:inputType">textUri</item>
    </style>
</resources>
