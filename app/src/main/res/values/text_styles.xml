<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CounterText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMinTextSize">11sp</item>
        <item name="autoSizeMaxTextSize">@dimen/counter_max_text_size</item>
        <item name="autoSizeStepGranularity">1px</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="CounterText.Label">
        <item name="autoSizeMaxTextSize">@dimen/counter_label_max_text_size</item>
    </style>

    <style name="CounterText.Outline">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header1">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Header2" parent="Header1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Header3" parent="Header1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subheader">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavMenuText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SelectableText" parent="Label">
        <item name="android:textColor">@color/accent_blue</item>
    </style>

    <style name="GameButtonLabel" parent="Header2">
        <item name="android:textColor">@color/game_button_color</item>
    </style>

</resources>