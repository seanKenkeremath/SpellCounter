<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- add negative margins to hide the lines on edge -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <solid android:color="?attr/scBackgroundColor" />
            <stroke
                android:width="@dimen/player_divider_width"
                android:color="?attr/scPlayerDividerColor" />
        </shape>
    </item>
</layer-list>