<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/default_padding_half"
    android:gravity="center_horizontal"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kenkeremath.mtgcounter.view.LineColorPickerView
        android:id="@+id/color_picker_view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/color_picker_height"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_marginEnd="@dimen/default_padding"
        app:rows="2"
        app:orientation="horizontal"
        app:colors="@array/counter_palette" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/input_counter_name_label"
            android:text="@string/counter_name"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/edit_counter_label_column_width"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_counter_name"
            style="@style/NameEditText"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/input_counter_name_label" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/input_counter_starting_value_label"
            android:text="@string/counter_starting_value"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/edit_counter_label_column_width"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_counter_starting_value"
            style="@style/ValueEditText"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/input_counter_starting_value_label" />
    </RelativeLayout>

</LinearLayout>