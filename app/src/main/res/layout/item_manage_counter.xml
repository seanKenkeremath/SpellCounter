<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kenkeremath.mtgcounter.view.counter.CounterIconView
        android:id="@+id/counter_icon_view"
        android:layout_width="@dimen/edit_player_counter_icon_size"
        android:layout_height="@dimen/edit_player_counter_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/default_padding" />

    <ImageView
        android:id="@+id/counter_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:padding="@dimen/default_padding"
        android:src="@drawable/ic_close" />
</FrameLayout>